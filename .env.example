# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Database
DATABASE_URL=postgresql://dnd:dndpassword@localhost:5432/dnd_recorder

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# AssemblyAI
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Storage
AUDIO_STORAGE_PATH=./data/audio

# Logging
LOG_LEVEL=INFO

# Bot/Music Bot Exclusion
# Set to false to include bots in transcription
EXCLUDE_BOTS_FROM_RECORDING=true
# Comma-separated list of Discord user IDs to exclude
EXCLUDED_USER_IDS=
# Comma-separated name patterns to exclude (case-insensitive)
# Default includes common music bots: rythm,groovy,fredboat,hydra,jockie,musicbox,matchbox,mee6,dyno,carl-bot
EXCLUDED_NAME_PATTERNS=
